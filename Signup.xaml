<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:local="clr-namespace:BankingAssignment"
             xmlns:models="clr-namespace:BankingAssignment.Models"
             x:Class="BankingAssignment.Signup"
             x:DataType="local:Signup" >
    
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Entry Placeholder="First Name" BindingContext="{Binding CurrentClient.ClientName}"/>
        <Entry Placeholder="Surname"  BindingContext="{Binding CurrentClient.ClientSurname}"/>


        <Button  Clicked="Button_Click" Margin="5" Text="Save"/>
        <Label Text="{Binding CurrentClient.ClientName}" />
        <Button  Clicked="ReloadButton_Clicked" Margin="5" Text="Reload"/>
       
        


    </VerticalStackLayout>
</ContentPage>