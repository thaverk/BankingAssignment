<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:local="clr-namespace:BankingAssignment"
              xmlns:models="clr-namespace:BankingAssignment.Models"
             x:Class="BankingAssignment.Profile"
             Title="Profile" x:DataType="local:Profile">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Label Text="{Binding CurrentClient.ClientName}" /> 
        <Label Text="{Binding CurrentClient.ClientSurname}" />
        <Label Text="{Binding CurrentClient.ClientEmail}"/>

    </VerticalStackLayout>
</ContentPage>